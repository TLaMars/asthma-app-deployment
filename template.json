{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "subscriptionId": {
            "type": "string"
        },
        "funcName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "funcHostingPlanName": {
            "type": "string"
        },
        "funcServerFarmResourceGroup": {
            "type": "string"
        },
        "funcAlwaysOn": {
            "type": "bool"
        },
        "funcStorageAccountName": {
            "type": "string"
        },
        "funcSku": {
            "type": "string"
        },
        "funcSkuCode": {
            "type": "string"
        },
        "funcWorkerSize": {
            "type": "string"
        },
        "funcWorkerSizeId": {
            "type": "string"
        },
        "funcNumberOfWorkers": {
            "type": "string"
        },
        "funcSlotName": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('funcName')]",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "location": "[parameters('location')]",
            "tags": {},
            "dependsOn": [
                "[concat('microsoft.insights/components/', parameters('funcName'))]",
                "[concat('Microsoft.Web/serverfarms/', parameters('funcHostingPlanName'))]",
                "[concat('Microsoft.Storage/storageAccounts/', parameters('funcStorageAccountName'))]"
            ],
            "properties": {
                "name": "[parameters('funcName')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "dotnet"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(concat('microsoft.insights/components/', parameters('funcName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                            "value": "[reference(concat('microsoft.insights/components/', parameters('funcName')), '2015-05-01').ConnectionString]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('funcStorageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('funcStorageAccountName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('funcStorageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('funcStorageAccountName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[concat(toLower(parameters('funcName')), 'a47c')]"
                        }
                    ]
                },
                "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', parameters('funcServerFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('funcHostingPlanName'))]",
                "clientAffinityEnabled": true
            },
            "resources": [
                {
                    "name": "slotConfigNames",
                    "type": "config",
                    "apiVersion": "2015-08-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('funcName'))]"
                    ],
                    "tags": {
                        "displayName": "slotConfigNames"
                    },
                    "properties": {
                        "appSettingNames": [
                            "StickySetting"
                        ]
                    }
                },
                {
                    "apiVersion": "2015-08-01",
                    "name": "appsettings",
                    "type": "config",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('funcName'))]",
                        "[resourceId('Microsoft.Insights/components', parameters('funcName'))]"
                    ],
                    "properties": {
                        "AzureWebJobsDashboard": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('funcStorageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('funcStorageAccountName')), '2015-05-01-preview').key1)]",
                        "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('funcStorageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('funcStorageAccountName')), '2015-05-01-preview').key1)]",
                        "FUNCTIONS_EXTENSION_VERSION": "[parameters('FUNCTIONS_EXTENSION_VERSION')]",
                        "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('funcStorageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('funcStorageAccountName')), '2015-05-01-preview').key1)]",
                        "WEBSITE_CONTENTSHARE": "[concat(toLower(parameters('funcName')), '8be4')]",
                        "WEBSITE_NODE_DEFAULT_VERSION": "6.5.0",
                        "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components', parameters('funcName')), '2014-04-01').InstrumentationKey]",
                        "StickySetting": "StuckToProduction"
                    }
                },
                {
                    "apiVersion": "2015-08-01",
                    "name": "[parameters('funcSlotName')]",
                    "type": "slots",
                    "tags": {
                        "displayName": "[concat(parameters('funcSlotName'), ' Deployment Slot')]"
                    },
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('funcName'))]"
                    ],
                    "properties": {},
                    "resources": [
                        {
                            "apiVersion": "2015-08-01",
                            "name": "appsettings",
                            "type": "config",
                            "dependsOn": [
                                "[resourceId('Microsoft.Web/sites', parameters('funcName'))]",
                                "[resourceId('Microsoft.Insights/components', parameters('funcName'))]",
                                "[resourceId('Microsoft.Web/sites/slots', parameters('funcName'), parameters('funcSlotName'))]"
                            ],
                            "properties": {
                                "AzureWebJobsDashboard": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('funcStorageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('funcStorageAccountName')), '2015-05-01-preview').key1)]",
                                "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('funcStorageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('funcStorageAccountName')), '2015-05-01-preview').key1)]",
                                "FUNCTIONS_EXTENSION_VERSION": "[parameters('FUNCTIONS_EXTENSION_VERSION')]",
                                "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('funcStorageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('funcStorageAccountName')), '2015-05-01-preview').key1)]",
                                "WEBSITE_CONTENTSHARE": "[concat(toLower(parameters('funcName')), 'testing')]",
                                "WEBSITE_NODE_DEFAULT_VERSION": "6.5.0",
                                "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components', parameters('funcName')), '2014-04-01').InstrumentationKey]",
                                "StickySetting": "[concat('StuckTo',parameters('funcSlotName'))]"
                            }
                        }
                    ]
                },
            ]
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('funcHostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "kind": "",
            "tags": {},
            "dependsOn": [],
            "properties": {
                "name": "[parameters('funcHostingPlanName')]",
                "workerSize": "[parameters('funcWorkerSize')]",
                "workerSizeId": "[parameters('funcWorkerSizeId')]",
                "numberOfWorkers": "[parameters('funcNumberOfWorkers')]"
            },
            "sku": {
                "Tier": "[parameters('funcSku')]",
                "Name": "[parameters('funcSkuCode')]"
            }
        },
        {
            "apiVersion": "2015-05-01",
            "name": "[parameters('funcName')]",
            "type": "microsoft.insights/components",
            "location": "westeurope",
            "tags": {},
            "properties": {
                "ApplicationId": "[parameters('funcName')]",
                "Request_Source": "IbizaWebAppExtensionCreate"
            }
        },
        {
            "apiVersion": "2019-06-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('funcStorageAccountName')]",
            "location": "[parameters('location')]",
            "tags": {},
            "sku": {
                "name": "Standard_LRS"
            },
            "properties": {
                "supportsHttpsTrafficOnly": true
            }
        }
    ]
}